# Environment Configuration for Video-n8n Project

# Node.js Environment
NODE_ENV=development
PORT=3000

# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_password
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=n8n
DATABASE_URL=postgresql://n8n:n8n@localhost:5432/n8n

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8n_admin_password
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters
N8N_USER_MANAGEMENT_JWT_SECRET=your_jwt_secret_here_minimum_32_characters
N8N_LOG_LEVEL=info

# API Keys - Replace with your actual API keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
LEONARDO_API_KEY=your_leonardo_api_key_here
SOUNDSTRIPE_API_KEY=your_soundstripe_api_key_here
RUNWAY_API_KEY=your_runway_api_key_here

# Third-Party API Configuration
SUNO_API_URL=https://api.sunoapi.org
SUNO_API_KEY=your_suno_api_key_here
KLING_API_URL=https://api.piapi.ai/kling
KLING_API_KEY=your_kling_api_key_here

# File Storage Configuration
ASSETS_STORAGE_PATH=./assets
FINAL_DRAFT_IMPORT_PATH=./assets/scripts
MEDIA_EXPORT_PATH=./assets/media
PREMIERE_PROJECTS_PATH=./assets/premiere-projects

# MCP Server Configuration
MCP_FINAL_DRAFT_PORT=8001
MCP_PREMIERE_PRO_PORT=8002
MCP_ORCHESTRATION_PORT=8003

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here

# Cost Monitoring
DAILY_BUDGET_LIMIT=100.00
WEEKLY_BUDGET_LIMIT=500.00
MONTHLY_BUDGET_LIMIT=2000.00
COST_ALERT_EMAIL=your_email@example.com

# Security Configuration
JWT_SECRET=your_jwt_secret_for_app_authentication
CORS_ORIGIN=http://localhost:3000,http://localhost:5678
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Configuration
ENABLE_DEBUG_LOGGING=true
MOCK_API_RESPONSES=false
SKIP_API_RATE_LIMITS=false

# GitHub Configuration (for issue tracking integration)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=altsang/video-n8n

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here